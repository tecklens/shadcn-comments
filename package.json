{
  "name": "shadcn-comments",
  "description": "Shadcn React component library for a functioning comments section",
  "private": false,
  "version": "1.0.5",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tecklens/shadcn-comments"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && npm run build:styles",
